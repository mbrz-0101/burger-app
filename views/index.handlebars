<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-4 text-center">
    <h2>Ready to eat!</h2>
    {{#each burger}}
      {{#unless devoured}}
        <p>{{burger_name}} <button class="devour-button" id="{{id}}">Devour</button></p>
      {{/unless}}
    {{/each}}
  </div>
  <div class="col-sm-4 text-center">
    <h2>Devoured!</h2>
    {{#each burger}}
      {{#if devoured}}
        <p>{{burger_name}}</p>
      {{/if}}
    {{/each}}
  </div>
  <div class="col-sm-2"></div>
</div>
<br>
<br>
<div class="row">
  <div class="col-sm-3"></div>
  <div class="col-sm-6">
    <form class="create-form">

      <div class="form-group text-center">
        <label for="burger-input">Enter a Burger Name:</label>
        <input type="text" id="burger-input" name="name" style="width: 100%">
      </div>

      <button style="width: 100%" id="submit-button" type="button" class="btn btn-info">Prepare Burger</button>
    </form>
  </div>
  <div class="col-sm-3"></div>
</div>